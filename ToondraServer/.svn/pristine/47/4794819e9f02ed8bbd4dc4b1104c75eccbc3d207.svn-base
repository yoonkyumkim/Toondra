package kr.co.toondra.api.image.service;

import java.io.ByteArrayOutputStream;
import java.io.File;
import java.io.FileInputStream;
import java.io.IOException;

import org.springframework.beans.factory.annotation.Value;
import org.springframework.stereotype.Service;

import kr.co.toondra.common.collection.PMap;

@Service
public class ToonViewService {

	@Value("${file.root_path}")
	String ROOT_PATH;


	public byte[] getImage(PMap pMap) {
			
			FileInputStream fi = null;
			ByteArrayOutputStream bo = null;
			byte[] fileArray = null;
			try{
				File file;
				file = new File(ROOT_PATH+"/"+ pMap.get("img")+".jpg");
				if(file.exists()) {
					fi = new FileInputStream(ROOT_PATH +"/"+ pMap.get("img") + ".jpg");
					bo = new ByteArrayOutputStream();
					int len = 0;
					byte[] buf = new byte[1024];
					while((len = fi.read(buf)) != -1){
						bo.write(buf, 0 , len);
					}
					fileArray = bo.toByteArray();
				} else {
					file = new File(ROOT_PATH+"/"+ pMap.get("img")+".gif");
					if(file.exists()) {
						fi = new FileInputStream(ROOT_PATH +"/"+ pMap.get("img") + ".gif");
						bo = new ByteArrayOutputStream();
						int len = 0;
						byte[] buf = new byte[1024];
						while((len = fi.read(buf)) != -1){
							bo.write(buf, 0 , len);
						}
						fileArray = bo.toByteArray();
					}
				}
			}catch(Exception e) {
				e.printStackTrace();
			} finally {
				try {
					if(fi != null) fi.close();
					if(bo != null) bo.close();
				} catch (IOException e) {
					// TODO Auto-generated catch block
					e.printStackTrace();
				}
			}
			return fileArray;
		}

}
